install.packages("Rserve")    			#### 	This allows R to work in KNIME
install.packages("MALDIquant")			#### 	MALDI data processing
install.packages("MALDIquantForeign")	#### 	Reads MALDI data
install.packages("svglite")				#### 	Exports svg image files
install.packages("d3heatmap")			####	Creates heatmaps 
install.packages("htmlwidgets")			####	Exports heatmaps
install.packages("FactoMineR")
install.packages("reshape2")
install.packages("ggplot2")
install.packages("networkD3")
install.packages("ape")


system('CMD /C "ECHO The R process has finished running && PAUSE"', 
   	invisible=FALSE, wait=FALSE)
